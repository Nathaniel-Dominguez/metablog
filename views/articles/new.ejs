<h2>Create a new Article</h2>

<form action="/articles" method="POST" role="form">
  <div class="form-group">
    <label for="title">Title:</label>
    <input type="text" class="form-control" placeholder="What is your article about?" name="title" required>
  </div>

  <div class="form-group">
    <label for="name">Author:</label>
    <select name="authorId" class="form-control">
    	<option value="0">Choose Your Name Below</option>
    	<% if(authors) {%>
    		<% authors.forEach(function(a) {%>
    			<option value="<%= a.id %>">
    				<%= a.name %>
    			</option>
    		<% }); %>
    	<% } %>
    </select>
    Don't see your name?
    <a href="/authors/new">Register Here</a>!
  </div>

  <div class="form-group">
  	<label for="name">Content:</label>
  	<textarea name="content" class="form-control"></textarea>
  </div>

  <div class="form-group">
    <label for="tags">Tags:</label>
    <input type="text" name="tags" class="form-control" placeholder="Tag topics! Seperate by commas!">
  </div>
  <button type="submit" class="btn btn-primary">Post Article</button>
</form>